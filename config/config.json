{   
    "STREAMREC": {
        "DataCollector": {
            "address":["moremilk/CoT_Medical_Diagnosis"]
        },

        "Preprocessing": {
            "Reader": {
                "limits": {
                    "max_file_size": 50000000, 
                    "max_filename_length": 255,
                    "max_metadata_fields": 10,
                    "buffer_size": 2048,
                    "similiarity_threshold": 75
                },
                "metadata": {
                    "required_keys": ["type", "file_name", "size_bytes"]
                },
                "allowed_types": {
                    "pdf": "application/pdf",
                    "doc": "application/msword",
                    "docx": "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
                    "txt": "text/plain"
                }
            },
            "parse":{
                "category": {
                    "small":1000000,
                    "medium":10000000,
                    "big": 40000000
                }
            },
            "Chunker": {
                "cleaning": true,
                "strategy": "Recursive",
                "chunk_size":100,
                "chunk_overlap":10
            }
        }
    }
}
